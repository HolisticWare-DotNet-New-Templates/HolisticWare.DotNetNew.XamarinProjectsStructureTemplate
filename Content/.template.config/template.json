{
    "$schema": "http://json.schemastore.org/template",
    "author": "HolisticWare/Xamarin Miljenko Cvjetko moljac Mel",
    "classifications": 
        [ 
            // Tags used to search for the template.
            "Custom Templates",
            "Xamarin",
            "HolisticWare",
            "Cross Platform",
            "xplat"
        ],
    "groupIdentity": "HolisticWare.Tools.ProjectTemplates",    
    "name": "Custom template for Xamarin cross platform libraries and bindings",
    // A unique ID for the project template.
    "identity": "HolisticWare.DotNetNew.XamarinProjectsStructureTemplate.CSharp",
    // for commandline project creation
    "shortName": "hw-structure",
    // replacement guids - used in the projects that will be replaced by new ones
    // find . -name *.csproj -exec grep ProjectGuid {} \;
    "guids": 
    [ 
        "D596961B-FD05-427C-90A0-D7532463A60A",
        "275DCE56-7F97-42A9-828C-D03A79AD7406",
        "0F0ACEAE-5373-49FA-9F65-17FA4A0AABA5",
        "8083A06E-0BA1-44C2-A3B0-A8AB86F12BE9",
        "837AE01F-CBB8-4B5A-8766-361787779B9E",
        "86A43EF1-6DF4-48D7-930B-B7590F46113A"
    ],
    // replacements string
    //      -   csproj file 
    //      -   namespace
    "sourceName": "XamarinProjectsStructureTemplate",
    "sources": 
    [
        {
            "source": "./",
            "target": "./",
            "exclude": 
            [
                // .gitginore include would be nice
                ".template.config/**",
                ".template.config/**/*", 
                "**/[Bb]in/**",
                "**/[Oo]bj/**", 
                "**/*.filelist", 
                "**/*.user", 
                "**/*.lock.json",
                "**/.vs/**",
                "**/packages/**",
                "**/*.DS_Store",
                "**/.DS_Store"
            ]
        }
    ],
    "tags": 
    {
        // Specify that this template is in C#.
        "language": "C#"                      
    }
}
